<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #CBC3E3;
            margin: 0;
            padding: 0;
            text-align: center;
            color: #333;
        }

        h1 {
            color: #000000;
        }

        form {
            max-width: 400px;
            margin: 20px auto;
            padding: 20px;
            background-color: #CBC3E3;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #555;
        }

        input, select {
            font-family: 'Roboto', sans-serif;
            width: 45%; /* Adjusted width */
            padding: 10px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            display: inline-block; /* Positioned horizontally */
            margin-right: 5%; /* Added some margin between inputs */
        }

        button {
            font-family: 'Roboto', sans-serif;
            background-color: #007bff;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #0056b3;
        }

        table {
            font-family: 'Roboto', sans-serif;
            width: 80%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #D2B48C;
            padding: 12px;
            color: #007bff;
        }

        th {
            background-color: #CBC3E3;
        }

        h2 {
            font-family: 'Roboto', sans-serif;
            color: #007bff;
        }
    </style>
</head>
<body>

    <h1>Calculator</h1>

    <form method="POST" action="/calculator">
        <label for="operand1">Operand 1:</label>
        <input type="text" name="operand1" required>

        <label for="operation">Operation:</label>
        <select name="operation" required>
            <option value="add">(+)</option>
            <option value="subtract">(-)</option>
            <option value="multiply">(*)</option>
            <option value="divide">(/)</option>
        </select>
        
        <label for="operand2">Operand 2:</label>
        <input type="text" name="operand2" required>
        
        <button type="submit">Calculate</button>
    </form>

    <!-- Display results if available -->
    <% if (results && results.length > 0) { %>
        <h2>Results</h2>
        <table>
            <thead>
                <tr>
                    <th>Input 1</th>
                    <th>Input 2</th>
                    <th>Input Operation</th>
                    <th>Result</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach(result => { %>
                    <tr>
                        <td><%= result.operand1 %></td>
                        <td><%= result.operand2 %></td>
                        <td><%= result.operation %></td>
                        <td><%= result.result %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>

</body>
</html>
